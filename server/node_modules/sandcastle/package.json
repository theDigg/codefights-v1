{
  "name": "sandcastle",
  "directories": {
    "lib": "./lib",
    "bin": "./bin"
  },
  "main": "./lib/index.js",
  "bin": "./bin/sandcastle.js",
  "version": "1.3.3",
  "author": "Ben Coe <bencoe@gmail.com>",
  "engines": [
    "node"
  ],
  "description": "A simple and powerful sandbox for running untrusted JavaScript.",
  "keywords": [
    "sandbox"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/bcoe/sandcastle.git"
  },
  "scripts": {
    "coverage": "./node_modules/.bin/mocha test/* --require blanket --colors --timeout=10000 -R html-cov > coverage.html",
    "test": "mocha --timeout=10000 --check-leaks --ui exports --require blanket -R mocoverage"
  },
  "config": {
    "blanket": {
      "pattern": "lib",
      "data-cover-never": [
        "node_modules",
        "test"
      ],
      "output-reporter": "spec"
    }
  },
  "dependencies": {
    "bufferstream": "^0.6.2",
    "clone": "^0.1.18",
    "debug": "^2.1.2",
    "lodash": "^2.4.1",
    "optimist": "^0.3.4"
  },
  "devDependencies": {
    "async": "^0.9.0",
    "blanket": "^1.1.6",
    "mocha": "2.1.0",
    "mocoverage": "^1.0.0"
  }
}
